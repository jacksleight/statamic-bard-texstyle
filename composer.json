{
    "name": "jacksleight/statamic-bard-texstyle",
    "autoload": {
        "psr-4": {
            "JackSleight\\StatamicBardTexstyle\\": "src"
        }
    },
    "extra": {
        "statamic": {
            "name": "Bard Texstyle",
            "description": "This Statamic addon gives you the ability to add custom heading, paragraph and span styles to the Bard fieldtype."
        },
        "laravel": {
            "providers": [
                "JackSleight\\StatamicBardTexstyle\\ServiceProvider"
            ]
        }
    },
    "require": {
        "statamic/cms": "^3.4"
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true
        }
    }
}
